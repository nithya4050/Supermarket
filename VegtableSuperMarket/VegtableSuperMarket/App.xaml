<Application x:Class="VegtableSuperMarket.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VegtableSuperMarket"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

         <Style TargetType="Button">
               <Setter Property="Background" Value="#27ae60"></Setter>
               <Setter Property="Foreground" Value="White"></Setter>
               <!--<Setter Property="FontWeight" Value="Bold"></Setter>-->
               <Setter Property="Width" Value="300"></Setter>
               <Setter Property="Height" Value="30"></Setter>
               <Setter Property="Padding" Value="5"></Setter>
        </Style>

        <Style TargetType="TextBlock">
            <!--<Setter Property="FontWeight" Value="Bold"></Setter>-->
            <Setter Property="FontSize" Value="12"></Setter>
            <!--<Setter Property="Foreground" Value="#6a6f6c"></Setter>-->
            <Setter Property="Padding" Value="5"></Setter>
            
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#27ae60"></Setter>
            <Setter Property="BorderThickness" Value="0 0 0 1"></Setter>
            <Setter Property="Background" Value="#fff"></Setter>
        </Style>


       
        

        
        
        
        
        
    </Application.Resources>
</Application>
